<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="body" stylesheets="@../../Styles/addTask.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="EditPage.controller.editpage">

    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <HBox alignment="CENTER" prefHeight="66.0" spacing="100.0">
            <children>

                <VBox alignment="CENTER" prefHeight="150" prefWidth="200">
                    <children>
                        <ImageView fitHeight="66.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true"
                                   VBox.vgrow="ALWAYS">
                            <image>
                                <Image url="@../../Images/cactus2.png"/>
                            </image>
                        </ImageView>
                        <HBox alignment="CENTER" spacing="10">
                            <children>
                                <Label styleClass="logoText" text="TASK ðŸŒµ NEST" HBox.hgrow="ALWAYS"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Form -->
        <VBox alignment="TOP_CENTER" prefHeight="379.0" prefWidth="960.0" spacing="8.0">
            <children>
                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="560.0" spacing="12">
                    <TextField fx:id="taskInput" prefHeight="57.0" prefWidth="560.0" promptText="Title"
                               styleClass="text-field"/>
                </HBox>
                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="560.0" spacing="12">
                    <TextField fx:id="descriptionInput" prefHeight="57.0" prefWidth="560.0" promptText="Description"
                               styleClass="text-field"/>
                </HBox>
                <DatePicker fx:id="dueDatePicker" promptText="Select Due Date" styleClass="datePicker"/>
                <HBox alignment="CENTER" prefHeight="70.0" prefWidth="960.0" spacing="20.0">
                    <children>
                        <Button onAction="#handleSave" styleClass="add-btn" text="Save Changes">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>

                        <Button onAction="#handleCancel" text="Cancel">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <styleClass>
                                <String fx:value="topBtn"/>
                                <String fx:value="logOutBtn"/>
                            </styleClass>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Optional space -->
        <VBox/>

    </VBox>
</AnchorPane>
