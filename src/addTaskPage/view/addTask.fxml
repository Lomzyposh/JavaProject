<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="body" stylesheets="@../../Styles/addTask.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="addTaskPage.controller.addTask">

    <VBox alignment="TOP_CENTER" layoutX="20" layoutY="20" spacing="16" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <HBox alignment="CENTER" prefHeight="66.0" prefWidth="560.0" spacing="150">
            <children>

                <VBox alignment="CENTER" prefHeight="150" prefWidth="200">
                    <children>
                        <ImageView fitHeight="66.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true"
                                   VBox.vgrow="ALWAYS">
                            <image>
                                <Image url="@../../Images/cactus2.png"/>
                            </image>
                        </ImageView>
                        <HBox alignment="CENTER" spacing="10">
                            <children>
                                <Label styleClass="logoText" text="TASK ðŸŒµ NEST" HBox.hgrow="ALWAYS"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
        <VBox alignment="TOP_CENTER" prefHeight="379.0" prefWidth="960.0" spacing="8.0">
            <children>

                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="560.0" spacing="12">
                    <TextField fx:id="taskInput" prefHeight="57.0" prefWidth="560.0" promptText="Title"
                               styleClass="text-field" HBox.hgrow="ALWAYS"/>
                </HBox>

                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="560.0" spacing="12">
                    <TextField fx:id="descriptionInput" prefHeight="70.0" prefWidth="560.0"
                               promptText="Description (Optional)" styleClass="text-field"/>
                </HBox>

                <DatePicker fx:id="dueDatePicker" prefHeight="43.0" prefWidth="495.0" promptText="Select Due Date"
                            styleClass="datePicker"/>
                <HBox alignment="CENTER" prefHeight="70.0" prefWidth="960.0" spacing="20.0">
                    <children>
                        <Button onAction="#handleAddTask" prefHeight="37.0" prefWidth="134.0" styleClass="add-btn"
                                text="Add"/>
                        <Button onAction="#navigateToAllTask" text="Cancel">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <styleClass>
                                <String fx:value="topBtn"/>
                                <String fx:value="logOutBtn"/>
                            </styleClass>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox/>

    </VBox>

</AnchorPane>
