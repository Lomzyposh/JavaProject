<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="body" stylesheets="@../../Styles/addTask.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="addTaskPage.controller.addTask">

    <VBox alignment="TOP_CENTER" layoutX="20" layoutY="20" spacing="16" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
      <HBox alignment="CENTER" prefHeight="66.0" prefWidth="560.0" spacing="150">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" prefHeight="15.0" prefWidth="74.0" styleClass="LogOutBtn" text="LogOut" />
      
              <Label styleClass="logoText" text="TASK-NEST" />
            <Button alignment="CENTER" layoutX="10.0" layoutY="29.0" mnemonicParsing="false" onAction="#navigateToAllTask" prefHeight="15.0" prefWidth="74.0" styleClass="LogOutBtn" text="See Tasks" />
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" prefHeight="280.0" prefWidth="560.0" spacing="8.0">
         <children>
            <Text layoutX="10.0" layoutY="97.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass=".desc-text" />
      
              <HBox alignment="CENTER" prefHeight="49.0" prefWidth="560.0" spacing="12">
                  <TextField fx:id="taskInput" prefHeight="57.0" prefWidth="560.0" promptText="Title" styleClass="text-field" HBox.hgrow="ALWAYS" />
              </HBox>
            <TextField prefHeight="70.0" prefWidth="560.0" promptText="Description (Optional)" styleClass="text-field" />
            <DatePicker prefHeight="43.0" prefWidth="495.0" promptText="Select Due Date" styleClass="datePicker" />
               <Button onAction="#handleAddTask" prefHeight="34.0" prefWidth="174.0" styleClass="add-btn" text="Add" />
         </children>
      </VBox>
      <VBox />

    </VBox>

</AnchorPane>
